global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'hono-backend'
    metrics_path: /metrics
    static_configs:
      - targets: ['host.docker.internal:3000']

remote_write:
  - url: ${GRAFANA_CLOUD_API_URL}
#    authorization:
#      credentials: ${GRAFANA_CLOUD_API_KEY}
    basic_auth:
      username: ${GRAFANA_CLOUD_API_ID}
      password: ${GRAFANA_CLOUD_API_KEY}
